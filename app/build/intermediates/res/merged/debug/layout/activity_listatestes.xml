<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/listView1"
        android:layout_width="1252dp"
        android:layout_height="360dp"
        android:layout_x="12dp"
        android:layout_y="307dp"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:headerDividersEnabled="@bool/BoolT"
        android:longClickable="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal|vertical"
        android:smoothScrollbar="true"
        android:visibility="visible" >
    </ListView>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="115dp"
        android:layout_y="31dp"
        android:text="Exames"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="14dp"
        android:src="@drawable/listat" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="21dp"
        android:layout_y="129dp"
        android:text="Voluntário:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edtPessoa"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_x="15dp"
        android:layout_y="166dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvvalMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="320dp"
        android:layout_y="129dp"
        android:text="Idade"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edtIdade"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_x="314dp"
        android:layout_y="166dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnNova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="446dp"
        android:layout_y="137dp"
        android:text="Nova aquisição" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="504dp"
        android:layout_height="485dp"
        android:layout_x="849dp"
        android:layout_y="309dp"
        android:src="@drawable/fundo" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="275dp"
        android:text="Seções:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</AbsoluteLayout>